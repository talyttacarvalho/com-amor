<h1> Editar post </h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
  <p>
    <%= f.label :title, "Título:" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text, "Digite as informações:" %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Voltar', posts_path %>