<h1> Publique aqui seu post </h1>

<div class="row">
  <div class="col-5">
    <%= form_for :post, url: posts_path do |f| %>
      <div class="form-group">
        <%= f.label :title, "Título:" %><br>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :text, "Digite as informações:" %><br>
        <%= f.text_area :text, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Criar novo Post', :class => 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-5">
    <%= link_to 'Voltar', posts_path, class: 'btn btn-secondary' %>
  </div>
</div>
