<h1>Com Amor</h1>
<p>Com amor rails girls sp 2018</p>
<% link_to 'Com Amor', controller: 'posts' %>

<%= link_to 'Novo post', new_post_path %>



<table>
  <tr>
    <th>Titulo:</th>
    <th>Texto:</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Post', post_path(post) %></td>
      <td><%= link_to 'Editar', edit_post_path(post) %></td>
      <td><%= link_to 'Deletar', post_path(post), method: :delete, data: { confirm: 'Tem certeza?' } %></td>

    </tr>
  <% end %>
</table>
